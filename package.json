{
  "name": "website-blocker-extension",
  "version": "1.3.1",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "vite",
    "move": "cp manifest.json dist/manifest.json && cp -r icons dist/icons",
    "build": "tsc && vite build && node build-content.js && pnpm move",
    "export": "pnpm build && rm -f focusmate-extension.zip && zip -r focusmate-extension.zip dist",
    "watch": "vite build --watch",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "dependencies": {
    "chart.js": "^4.4.8",
    "react": "^19.1.0",
    "react-chartjs-2": "^5.3.0",
    "react-dom": "^19.1.0"
  },
  "devDependencies": {
    "@babel/core": "^7.23.0",
    "@babel/preset-env": "^7.23.0",
    "@babel/preset-react": "^7.23.3",
    "@babel/preset-typescript": "^7.23.3",
    "@testing-library/jest-dom": "^6.4.2",
    "@testing-library/react": "^15.0.0",
    "@types/chrome": "^0.0.313",
    "@types/jest": "^29.5.14",
    "@types/node": "^20.11.30",
    "@types/react": "^19.1.0",
    "@types/react-dom": "^19.1.1",
    "@typescript-eslint/eslint-plugin": "^7.3.1",
    "@typescript-eslint/parser": "^7.3.1",
    "@vitejs/plugin-react": "^4.3.4",
    "autoprefixer": "^10.4.17",
    "babel-jest": "^29.7.0",
    "esbuild": "^0.20.0",
    "eslint": "^8.57.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "postcss": "^8.4.35",
    "tailwindcss": "^3.4.1",
    "ts-jest": "^29.3.1",
    "typescript": "^5.8.3",
    "vite": "^5.4.2"
  }
}
